{
   "background": {
      "page": "background.html"
   },
   "content_scripts": [ {
      "js": [ "js/FavIconCounter.js", "js/contentscript.js" ],
      "matches": [ "http://*.facebook.com/*", "https://*.facebook.com/*" ],
      "run_at": "document_idle"
   } ],
   "description": "Displays your total facebook notifications in the tab icon (just like the gmail labs feature)",
   "icons": {
      "128": "images/logo_128.png",
      "16": "images/logo_16.png",
      "32": "images/logo_32.png",
      "48": "images/logo_48.png"
   },
   "manifest_version": 2,
   "name": "Facebook Notification Icon",
   "options_page": "options.html",
   "permissions": [ "http://*.facebook.com/*", "https://*.facebook.com/*" ],
   "update_url": "http://clients2.google.com/service/update2/crx",
   "version": "0.3.1",
   "web_accessible_resources": [ "images/facebook.ico" ]
}
